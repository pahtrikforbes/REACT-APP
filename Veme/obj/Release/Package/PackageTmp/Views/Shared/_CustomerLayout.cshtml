                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- header holder of the page -->
            <div class="header-holder container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="logo">
                            <a href="javascript:void(0);"><img src="~/Content/Site-theme/images/logo.png" alt="Veme" class="img-resposnive"></a>
                        </div>
                        @if (this.User.IsInRole(RoleName.Customer))
                        {
