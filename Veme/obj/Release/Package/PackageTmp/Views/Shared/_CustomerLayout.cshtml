                                        <!--a href="mailto:Mail@Coupmy.Com">Mail@Coupmy.Com</a-->
                                    </span>
                                </li>
                            </ul>
                        </div>
                        <div class="col2">
                            <h3 class="text-uppercase">Quick Links</h3>
                            <ul class="list-unstyled f-nav">
                                <li><a href="@Url.Action("About","Home")">About Us</a></li>
                                <!--li><a href="#">Coupons</a></li-->
